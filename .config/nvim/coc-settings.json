{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "vala-language-server": {
      "command": "vala-language-server",
      "filetypes": ["vala"],
      "args": ["--pkg=posix", "--enable-gobject-tracing", "--fatal-warnings"]
    },
    "dart": {
      "command": "dart",
      "args": [
        "/usr/local/Cellar/dart/2.5.0/libexec/bin/snapshots/analysis_server.dart.snapshot",
        "--lsp"
      ],
      "filetypes": ["dart"],
      "disableDynamicRegister":  true,
      "trace.server": "verbose"
    }
  }
}
